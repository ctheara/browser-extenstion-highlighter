{
    "name": "Highlighter",
    "description": "Extension for highlighting search terms on a page",
    "version": "1.0",
    "permissions": [
        "activeTab" 
    ],

    "browser_action": {
      "default_title": "Enter a search term",
      "default_popup": "popup.html"
    },
     "web_accessible_resources": [
      "styling.css"
  ],

     "manifest_version": 2
}
